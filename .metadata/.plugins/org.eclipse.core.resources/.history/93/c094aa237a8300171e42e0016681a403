				try {
					StartClient frame = new StartClient();
					frame.setVisible(true);
				} catch (Exception e) {
					e.printStackTrace();
				}
			}
		});
	}

	/**
	 * Create the frame.
	 */
	public StartClient() {
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
