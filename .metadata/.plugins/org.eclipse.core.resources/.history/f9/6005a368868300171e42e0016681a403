    private void studentActionPerformed(java.awt.event.ActionEvent evt) {                                        
        // TODO add your handling code here:
        staffName.setEnabled(false);
        staffKey.setEnabled(false);
        staffSubmit.setEnabled(false);
        
        cliKey.setEnabled(true);
        cliJoin.setEnabled(true);
    }                                       

