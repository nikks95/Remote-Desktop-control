    private void staffSubmitActionPerformed(java.awt.event.ActionEvent evt) {                                            
        // TODO add your handling code here:
    	
    	hostName=staffName.getText().trim();
    	hostKey = staffKey.getText().trim();
    	establishConnection(hostName,hostKey);
    }                                        
    
    void establishConnection(String hostName,String hostKey) {
    	
    	
    }

    private void staffClearActionPerformed(java.awt.event.ActionEvent evt) {                                           
        // TODO add your handling code here:
        staffName.setText("");
        staffKey.setText("");
    }                                          

    private void staffActionPerformed(java.awt.event.ActionEvent evt) {                                      
        // TODO add your handling code here:
        staffName.setEnabled(true);
        staffKey.setEnabled(true);
        staffSubmit.setEnabled(true);
        cliKey.setEnabled(false);
        cliJoin.setEnabled(false);
        
    }                                     

